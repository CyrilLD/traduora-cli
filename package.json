{
  "name": "traduora-cli",
  "version": "0.0.1-canary-001-preview",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "tdd": "test --watch",
    "test": "jest --coverage",
    "start": "node ./src/index.js --require @babel/register",
    "eslint": "eslint src"
  },
  "author": "Jochen Preusche <iilei@users.noreply.github.com>",
  "license": "Unlicense",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!coverage/**/*"
    ],
    "rootDir": "./",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 9.0.0",
    "npm": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iilei/traduora-cli"
  },
  "lint-staged": {
    "*.js": [
      "npm run eslint -- --fix",
      "git add"
    ],
    "*.{css,sass,less}": [
      "./bin/fail.sh Please use .scss for styling!"
    ],
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ]
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "test"
    }
  }
}
