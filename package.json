{
  "name": "traduora-cli",
  "version": "0.0.1-canary-001-preview",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "tdd": "test --watch",
    "test": "jest",
    "start": "node --require @babel/register ./src/index.js ",
    "eslint": "eslint src __mocks__",
    "build": "babel src --out-dir lib --ignore \"src/**/*.spec.js\"",
    "prepack": "node_modules/.bin/del lib ; npm run build"
  },
  "bin": {
    "traduora": "lib/index.js"
  },
  "author": "Jochen Preusche <iilei@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "cosmiconfig": "^5.2.1",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "del-cli": "^2.0.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-mock-axios": "^3.0.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.js",
      "!coverage/**/*",
      "!lib/**/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jestsetup.js"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "clearMocks": true
  },
  "engines": {
    "node": ">= 9.0.0",
    "npm": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iilei/traduora-cli"
  },
  "lint-staged": {
    "*.js": [
      "npm run eslint -- --fix",
      "git add"
    ],
    "*.{css,sass,less}": [
      "./bin/fail.sh Please use .scss for styling!"
    ],
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test -- --coverage #"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "traduora": {
    "client-id": "test",
    "locale": "en_GB",
    "locales": [
      "de_DE",
      "en_GB"
    ]
  }
}
